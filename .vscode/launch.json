  "version": "0.2.0",
  "configurations": [
    {
      "name": "MODULE: Work Items",
      "type": "debugpy",
      "request": "launch",
      "module": "src.work_items",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env",
      "args": ["--output_json", "--output_folder", "${workspaceFolder}/tests"]
    },
    {
      "name": "MODULE: Main",
      "type": "debugpy",
      "request": "launch",
      "module": "main",
      "console": "integratedTerminal",
      "envFile": "${workspaceFolder}/.env"
    },
    {
      "name": "Python: Current File",
      "type": "debugpy",
      "request": "launch",
      "program": "${file}",
      "console": "integratedTerminal"
    },
    {
      "name": "Python: Attach",
      "type": "debugpy",
      "request": "attach"
    },
    {
      "name": "DEBUG | Changelog Weaver",
      "type": "debugpy",
      "request": "launch",
      // "program": "${workspaceFolder}/main.py",
      "module": "changelog_weaver",
      "console": "integratedTerminal"
    }
  ]
}
